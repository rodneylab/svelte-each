    "@playwright/test": "^1.30.0",
    "@sveltejs/adapter-auto": "1.0.2",
    "@sveltejs/kit": "1.3.3",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "commitlint": "^17.4.2",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-svelte3": "^4.0.0",
