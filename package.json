    "@playwright/test": "^1.34.2",
    "@sveltejs/adapter-auto": "2.1.0",
    "@sveltejs/kit": "1.18.0",
    "@types/node": "^20.2.3",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "commitlint": "^17.6.3",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-svelte3": "^4.0.0",
